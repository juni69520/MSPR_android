<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BarcodeTabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/editTextNom"
                    style="@style/EditTextEpsi"
                    android:ems="10"
                    android:layout_width="272dp"
                    android:hint="Nom"
                    android:inputType="none" />
                <EditText
                    android:id="@+id/editTextPrenom"
                    style="@style/EditTextEpsi"
                    android:layout_width="272dp"
                    android:ems="10"
                    android:hint="Prénom"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/editTextAffectation"
                    style="@style/EditTextEpsi"
                    android:layout_width="272dp"
                    android:ems="10"
                    android:hint="Affectation"
                    android:inputType="none" />

                <CheckBox
                    android:id="@+id/someId1"
                    android:layout_width="270dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Mousqueton" />

                <CheckBox
                    android:id="@+id/someId2"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Gants d’intervention" />

                <CheckBox
                    android:id="@+id/someId3"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Brassard de sécurité" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId4"
                    android:text="Porte menottes"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId5"
                    android:text="Bandeau agent de sécurité cynophile"
                    android:checked="true" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId6"
                    android:text="Talkies walkies"
                    android:checked="true" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId7"
                    android:text="Lampe Torche"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId8"
                    android:text="Kit oreillette"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId9"
                    android:text="Tasers"
                    android:checked="false" />
                <CheckBox
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/someId10"
                    android:text="Bombes lacrymogènes"
                    android:checked="false" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>